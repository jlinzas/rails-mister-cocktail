<nav class="navbaro">
<%= link_to "Home", cocktails_path, class: "linko" %>
<%= link_to "Add a dose", new_cocktail_dose_path(@cocktail.id), class: "linko"  %>
</nav>
<div class="container">

  <h1 class="h1_1"><%= @cocktail.name %> : Recette</h1>
  <div class="row">
    <div class="col-sm-12 col-md-6">
      <table class="table_1">
        <tbody>
          <thead>
            <th>Ingredient</th>
            <th>Description</th>
          </thead>
          <% @cocktail.doses.each do |dose| %>
            <tr>
              <td><%= dose.ingredient.name %></td>
              <td><%= dose.description %></td>
              <td>
                <%= link_to dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } do %>
                  <i class="fa fa-trash destroy_dose"></i>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>