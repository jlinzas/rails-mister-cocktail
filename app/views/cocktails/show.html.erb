<%= link_to "Reviens Ã  la maison", cocktails_path, class: "linko" %>
<%= link_to "Ajouter un dosage", new_cocktail_dose_path(@cocktail.id), class: "linko"  %>
</nav>
<div class="container">
<% if @cocktail.photo.attached? %>
  <%= cl_image_tag @cocktail.photo.key, height: 300, width: 400, crop: :fill %>
<% end %>

  <h1 class="h1_1 center"><%= @cocktail.name %> : Recette  <%= link_to edit_cocktail_path(@cocktail) do %>
                  <i class="fas fa-clone"></i>
                <% end %></h1> 
  <div class="row">
    <div class="col-sm-12 col-md-6 center">
      <table class="table_1">
        <tbody>
          <thead>
            <th>Ingredient</th>
            <th>Description</th>
          </thead>
          <% @cocktail.doses.each do |dose| %>
            <tr>
              <td><%= dose.ingredient.name %></td>
              <td><%= dose.description %></td>
              <td>
                <%= link_to edit_cocktail_path(@cocktail) do %>
                  <i class="fas fa-edit"></i>
                <% end %>
              </td>
              <td>
                <%= link_to dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } do %>
                  <i class="fa fa-trash destroy_dose"></i>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>